<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Dashboard"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="48dp"/>

    <Button
        android:id="@+id/btnContextAdd"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="Add New Costume"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnViewReservations"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="View Reservations"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnViewClients"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="View Clients"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnViewCostumes"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="View All Costumes"
        android:backgroundTint="@color/gray_text"
        android:textColor="@color/white"/>

</LinearLayout>
